  @model CRUD_DAL.Models.ViewModel.VMEmployee
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Responsive Registration Form</title>
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .form-control:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(59,130,246,0.4);
            border-color: #3b82f6;
            background-color: #f0f9ff;
        }

        body {
            background: linear-gradient(to right, #f9fafb, #e0f2fe);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <input type="hidden" id="hdnemployeeid" value="@Model.Emp_Id" />
    <main class="w-full max-w-2xl">
        <section class="bg-white shadow-2xl rounded-2xl p-6 md:p-10 border border-blue-100">
            <header class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="text-2xl md:text-3xl font-bold text-blue-700">Registration Form</h1>
                    <p class="text-sm text-gray-500">Clean, accessible & mobile-friendly</p>
                </div>
                <div class="hidden md:flex items-center gap-3 text-sm">
                    <span class="px-3 py-1 rounded bg-blue-100 text-blue-700 font-medium">Optimized</span>
                    <span class="px-3 py-1 rounded bg-green-100 text-green-700 font-medium">Responsive</span>
                </div>
            </header>

            <form id="regForm" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- Name -->
                <label class="block">
                    <span class="text-sm font-medium text-blue-800">Full name</span>
                    <input value="@Model.Emp_Name" required name="name" type="text" placeholder="John Doe"
                           id="name" class="form-control mt-1 block w-full rounded-lg border-gray-300 bg-white px-4 py-2" />
                </label>

                <!-- Designation -->
                <label class="block">
                    <span class="text-sm font-medium text-blue-800">Designation</span>
                    <input value="@Model.Emp_Designation" name="designation" type="text" placeholder="Software Engineer / Manager"
                           id="designation" class="form-control mt-1 block w-full rounded-lg border-gray-300 bg-white px-4 py-2" />
                </label>

                <!-- Age -->
                <label class="block">
                    <span class="text-sm font-medium text-blue-800">Age</span>
                    <input value="@Model.Emp_Age" name="age" type="number" min="16" max="120" required placeholder="28"
                           id="age" class="form-control mt-1 block w-full rounded-lg border-gray-300 bg-white px-4 py-2" />
                </label>

                <!-- Salary -->
                <label class="block">
                    <span class="text-sm font-medium text-blue-800">Salary (annual)</span>
                    <div class="mt-1 relative">
                        <span class="absolute left-3 top-2 text-sm text-gray-500">₹</span>
                        <input value="@Model.Emp_Salary" name="salary" id="salary" type="text" inputmode="numeric" required placeholder="500000"
                               class="form-control mt-0 block w-full rounded-lg border-gray-300 bg-white pl-9 pr-4 py-2" />
                    </div>
                </label>

                <!-- Mobile No -->
                <label class="block md:col-span-2">
                    <span class="text-sm font-medium text-blue-800">Mobile number</span>
                    <input value="@Model.Emp_MobileNo" name="mobile" id="mobile" type="tel" pattern="[0-9]{10}" required placeholder="9876543210"
                           class="form-control mt-1 block w-full rounded-lg border-gray-300 bg-white px-4 py-2" />
                    <p class="mt-1 text-xs text-gray-500">Enter 10 digits without country code.</p>
                </label>

                <!-- Gender (radio buttons) -->
                <fieldset class="md:col-span-2">
                    <legend class="text-sm font-medium text-blue-800">Gender</legend>
                    <div class="mt-2 flex gap-6 items-center">
                        <label class="inline-flex items-center gap-2">
                            <input type="radio" name="gender" value="male"
                                   class="form-radio h-4 w-4 text-blue-600"
                                   @(Model.Emp_Gender == "male" ? "checked" : "") />
                            <span class="text-sm text-gray-700">Male</span>
                        </label>

                        <label class="inline-flex items-center gap-2">
                            <input type="radio" name="gender" value="female"
                                   class="form-radio h-4 w-4 text-blue-600"
                                   @(Model.Emp_Gender == "female" ? "checked" : "") />
                            <span class="text-sm text-gray-700">Female</span>
                        </label>

                        <label class="inline-flex items-center gap-2">
                            <input type="radio" name="gender" value="other"
                                   class="form-radio h-4 w-4 text-blue-600"
                                   @(Model.Emp_Gender == "other" ? "checked" : "") />
                            <span class="text-sm text-gray-700">Other</span>
                        </label>

                    </div>
                </fieldset>

                <!-- Address -->
                <label class="block md:col-span-2">
                    <span class="text-sm font-medium text-blue-800">Address</span>
                    <textarea name="address" rows="3" id="address"
                              class="form-control mt-1 block w-full rounded-lg border-gray-300 bg-white px-4 py-2">
                              @Model.Emp_Address
                    </textarea>



                </label>

                <!-- Submit and reset -->
                <div class="md:col-span-2 flex flex-col md:flex-row gap-3 justify-end">
                    @* <button type="reset" class="w-full md:w-auto px-6 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-100">Reset</button>*@
                    <button type="submit" id="btnSubmit" class="w-full md:w-auto px-6 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow">Update</button>
                    <!-- Redirect to List -->
                    <a href="/Home/List" class="px-6 py-2 rounded-lg bg-green-600 hover:bg-green-700 text-white shadow">Go to List</a>
                </div>
            </form>

            <!-- Result modal (simple) -->
            <div id="result" class="hidden mt-6 p-4 rounded-lg bg-blue-50 border-l-4 border-blue-600">
                <h3 class="text-sm font-semibold text-blue-700">Form submitted</h3>
                <pre id="resultText" class="text-xs text-blue-900 mt-2"></pre>
            </div>



        </section>

        <footer class="text-center mt-4 text-xs text-gray-500">Made with care • Accessible & mobile-first</footer>
    </main>
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/Emp_Scripts/UpdateEmployee.js"></script>


    <script>
        const salaryInput = document.getElementById('salary');
        salaryInput.addEventListener('input', (e) => {
            const raw = e.target.value.replace(/[^0-9]/g, '');
            if (!raw) { e.target.value = ''; return; }
            e.target.value = Number(raw).toLocaleString('en-IN');
        });

        const form = document.getElementById('regForm');
        form.addEventListener('submit', function (ev) {
            ev.preventDefault();
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const data = new FormData(form);
            const obj = Object.fromEntries(data.entries());
            obj.salary = obj.salary ? obj.salary.replace(/,/g, '') : '';

            const result = document.getElementById('result');
            const resultText = document.getElementById('resultText');
            resultText.textContent = JSON.stringify(obj, null, 2);
            result.classList.remove('hidden');
        });

        document.getElementById('mobile').setAttribute('inputmode', 'numeric');
    </script>
</body>
</html>